<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cream">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="26dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/pngfind_com_arrow_sign_png_2470624">
        </ImageView>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@+id/back_button"
            android:src="@drawable/logojp"
            android:textAlignment="center">
        </ImageView>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@+id/logo"
            android:fontFamily="casual"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/englishButton"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/english" />

        <ImageView
            android:id="@+id/spanishButton"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/englishButton"
            app:srcCompat="@drawable/spanish" />
    </RelativeLayout>

</RelativeLayout>